# Kosmos E2E Testing - Full Configuration
# This configuration enables all services for comprehensive E2E testing
# Duration: ~20min for full suite

# =============================================================================
# LLM Provider (choose one)
# =============================================================================
# Option A: Anthropic (recommended for production validation)
# export LLM_PROVIDER=anthropic
# export ANTHROPIC_API_KEY=sk-ant-your-key-here
# export ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Option B: OpenAI
# export LLM_PROVIDER=openai
# export OPENAI_API_KEY=sk-your-key-here
# export OPENAI_MODEL=gpt-4

# Option C: Local (Ollama) - Default for this config
export LLM_PROVIDER=openai
export OPENAI_API_KEY=ollama
export OPENAI_BASE_URL=http://localhost:11434/v1
export OPENAI_MODEL=deepseek-r1:8b

# =============================================================================
# Database Configuration
# =============================================================================
export DATABASE_URL=sqlite:///kosmos.db

# Neo4j (optional - for knowledge graph)
# export NEO4J_URI=bolt://localhost:7687
# export NEO4J_USER=neo4j
# export NEO4J_PASSWORD=your-password

# Redis (optional - for distributed caching)
# export REDIS_URL=redis://localhost:6379/0

# ChromaDB (optional - for vector embeddings)
export CHROMA_PERSIST_DIRECTORY=./chroma_db

# =============================================================================
# External APIs
# =============================================================================
# Semantic Scholar (optional - for literature search)
# export SEMANTIC_SCHOLAR_API_KEY=your-api-key

# =============================================================================
# Execution Configuration
# =============================================================================
export ENABLE_SANDBOXING=true
export MAX_EXPERIMENT_EXECUTION_TIME=600

# =============================================================================
# Research Configuration
# =============================================================================
export MAX_RESEARCH_ITERATIONS=20
export RESEARCH_BUDGET_USD=50.0
export ENABLED_DOMAINS=biology,physics,chemistry,neuroscience,materials
export MIN_NOVELTY_SCORE=0.6

# =============================================================================
# Performance Configuration
# =============================================================================
export ENABLE_CONCURRENT_OPERATIONS=true
export MAX_CONCURRENT_EXPERIMENTS=4
export PARALLEL_EXPERIMENTS=2

# =============================================================================
# Testing Configuration
# =============================================================================
export TEST_MODE=false
export KOSMOS_TEST_TIMEOUT=1200
export KOSMOS_TEST_TIER=full
export KOSMOS_SANDBOX_IMAGE=kosmos-sandbox:latest
export KOSMOS_ARTIFACTS_DIR=./test_artifacts

# =============================================================================
# Model Parameters
# =============================================================================
export LLM_TEMPERATURE=0.7
export LLM_MAX_TOKENS=8192
